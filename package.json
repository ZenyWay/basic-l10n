{
  "name": "basic-l10n",
  "version": "1.0.0",
  "description": "basic localization of template literals (360 bytes gzip), including pluralization and reordering of substitutions.",
  "main": "dist/index.min.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "predist": "mkdirp dist && rimraf dist/*",
    "dist": "tsc -p src --outDir dist",
    "postdist": "npm run uglify",
    "example": "npm run example:bundle && npm run example:serve",
    "example:serve": "http-server -c-1 -i -e html -o -p 6510 example",
    "preexample:bundle": "rimraf spec/example/*.js",
    "example:bundle": "browserify example/index.ts -p [ tsify --project example ] -g uglifyify -p bundle-collapser/plugin -p [ common-shakeify -v ] | uglifyjs -c -m toplevel -o example/index.js",
    "prepublish": "npm run test",
    "pretest": "npm run dist",
    "test": "jasmine",
    "test:web:serve": "http-server -c-1 -o -p 6510 spec/web",
    "pretest:web": "rimraf spec/web/*.js && npm run dist",
    "test:web": "browserify spec/*.spec.js -g uglifyify -p bundle-collapser/plugin -p [ common-shakeify -v ] | uglifyjs -c -m toplevel -o spec/web/index.spec.js && npm run test:web:serve",
    "uglify": "uglifyjs dist/index.js -c -m toplevel --define process.env.NODE_ENV=\\\"production\\\" -o dist/index.min.js"
  },
  "keywords": [
    "locale",
    "l10n",
    "localization",
    "i18n",
    "internationalization",
    "plural",
    "template literals"
  ],
  "author": {
    "name": "Stephane M. Catala",
    "email": "stephane@zenyway.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zenyway/basic-compose.git"
  },
  "bugs": {
    "url": "https://github.com/zenyway/basic-compose/issues"
  },
  "homepage": "https://github.com/zenyway/basic-compose#readme",
  "devDependencies": {
    "@types/node": "^10.3.4",
    "browserify": "^16.2.2",
    "bundle-collapser": "^1.3.0",
    "common-shakeify": "^0.4.6",
    "envify": "^4.1.0",
    "http-server": "^0.11.1",
    "jasmine": "^3.1.0",
    "printf": "^0.3.0",
    "rimraf": "^2.6.2",
    "tsify": "^4.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "uglify-es": "^3.3.9",
    "uglifyify": "^5.0.0",
    "xterm": "^3.4.1"
  },
  "dependencies": {}
}
